generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  role      UserRole  @default(ADMIN)
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]
  payments  Payment[]
  expenses  Expense[]

  @@map("users")
}

model Project {
  id            String        @id @default(uuid())
  title         String
  clientDetails String?       @db.Text
  startDate     DateTime?
  endDate       DateTime?
  description   String?       @db.Text
  status        String?       @default("ACTIVE")
  budget        Decimal?      @db.Decimal(10, 2)
  createdBy     String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  user         User          @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  payments     Payment[]
  workPackages WorkPackage[]
  expenses     Expense[]

  @@map("projects")
}

model WorkPackage {
  id                  String              @id @default(uuid())
  workPackageName     String
  amount              Decimal             @db.Decimal(10, 2)
  version             String?
  startDate           DateTime?
  completionDate      DateTime?
  advanceAmount       Decimal?            @db.Decimal(10, 2)
  miscellaneousAmount Decimal?            @db.Decimal(10, 2)
  ongoingCost         Decimal?            @db.Decimal(10, 2)
  status              WorkPackageStatus?  @default(PENDING)
  description         String?             @db.Text
  projectId           String
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("work_packages")
}

model Account {
  id              String    @id @default(uuid())
  accountName     String
  accountHolderName String
  bankName        String?
  accountNumber   String?
  ifscCode        String?
  accountType     String?
  openingBalance  Decimal?  @db.Decimal(10, 2)
  currentBalance  Decimal   @default(0) @db.Decimal(10, 2)
  isPrimary       Boolean   @default(false)
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  payments        Payment[]
  expenses        Expense[]

  @@map("accounts")
}

model Payment {
  id              String   @id @default(uuid())
  amount          Decimal  @db.Decimal(10, 2)
  paymentDate     DateTime @default(now())
  description     String?  @db.Text
  transactionRef  String?
  accountId       String
  projectId       String
  addedBy         String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  account Account @relation(fields: [accountId], references: [id], onDelete: Restrict)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [addedBy], references: [id], onDelete: Restrict)

  @@map("payments")
}

model Expense {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  amount      Decimal  @db.Decimal(10, 2)
  expenseDate DateTime @default(now())
  reference   String?
  accountId   String
  projectId   String?
  addedBy     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  account Account  @relation(fields: [accountId], references: [id], onDelete: Restrict)
  project Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User     @relation(fields: [addedBy], references: [id], onDelete: Restrict)

  @@map("expenses")
}

model Employee {
  id                    String              @id @default(uuid())
  name                  String
  email                 String              @unique
  phone                 String?
  designation           String?
  joiningDate           DateTime            @default(now())
  monthlySalary         Decimal             @default(0) @db.Decimal(10, 2)
  dailySalary           Decimal             @db.Decimal(10, 2)
  paidLeavesPerMonth    Int                 @default(2)
  workingDays           String              @default("1,2,3,4,5,6") // 0=Sunday, 1=Monday, ... 6=Saturday
  isActive              Boolean             @default(true)
  createdAt             DateTime            @default(now())
  updatedAt             DateTime            @updatedAt

  leaves                Leave[]
  compensatoryLeaves    CompensatoryLeave[]
  salaryRecords         SalaryRecord[]

  @@map("employees")
}

model CompensatoryLeave {
  id          String    @id @default(uuid())
  employeeId  String
  reason      String    @db.Text
  grantedDate DateTime  @default(now())
  expiryDate  DateTime
  isUsed      Boolean   @default(false)
  usedDate    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@map("compensatory_leaves")
}

model Leave {
  id          String     @id @default(uuid())
  employeeId  String
  leaveDate   DateTime
  leaveType   LeaveType  @default(FULL_DAY)
  reason      String     @db.Text
  isCompensatory Boolean @default(false)
  compensatoryReason String? @db.Text
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@map("leaves")
}

model SalaryRecord {
  id                String   @id @default(uuid())
  employeeId        String
  month             Int      // 1-12
  year              Int
  workingDays       Int
  presentDays       Int
  halfDays          Int      @default(0)
  paidLeaves        Int      @default(0)
  unpaidLeaves      Int      @default(0)
  compensatoryLeaves Int     @default(0)
  totalSalary       Decimal  @db.Decimal(10, 2)
  deductions        Decimal  @default(0) @db.Decimal(10, 2)
  netSalary         Decimal  @db.Decimal(10, 2)
  isProcessed       Boolean  @default(false)
  processedDate     DateTime?
  notes             String?  @db.Text
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, month, year])
  @@map("salary_records")
}

enum LeaveType {
  FULL_DAY
  HALF_DAY
}

enum WorkPackageStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  ON_HOLD
}

enum UserRole {
  ADMIN
}
